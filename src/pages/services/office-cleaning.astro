---
import Layout from "../../layouts/Default.astro";
import Aside from "../../components/Aside.astro";
import QuoteNow from "../../components/QuoteNow.astro";
const title = "Office Cleaning - Believe Cleaning";
---

<Layout title={title}>
   <section
      class="section is-medium has-background-image"
      data-background="/img/banner-services-int.webp"
      data-position="center 30%"
   >
      <div class="overlay" data-color="#0f466b" data-color-opacity=".35"></div>

      <div class="container">
         <div class="columns is-vcentered is-centered">
            <div class="column is-10 has-text-centered">
               <h1 class="title is-1 is-bold is-spaced light-text">
                  Office Cleaning
               </h1>

               <QuoteNow />
            </div>
         </div>
      </div>
   </section>

   <!-- About -->

   <section class="section">
      <div class="container">
         <div class="content-wrapper">
            <div class="columns">
               <div class="column is-8">
                  <div class="content">
                     <figure class="image m-0">
                        <img
                           src="/img/services/office-cleaning.webp"
                           alt=""
                        />
                     </figure>

                     <h3 class="title is-3 is-spaced">
                        Believe office cleaning services!
                     </h3>

                     <h4 class="subtitle is-5">
                        We specialize in maintaining pristine workspaces so you
                        can focus on what matters most. Discover a spotless
                        environment tailored to your needs with our reliable and
                        efficient cleaning solutions.
                     </h4>

                     <h4 class="subtitle is-5 has-text-centered">What Our Service Includes</h4>

                     <div class="two-cols">
                        <p>
                           <b>Common Office Areas</b>
                        </p>

                        <ul class="normal-list">
                           <li>Vacuum and mop floors</li>
                           <li>Dust furniture & decorations</li>
                           <li>Vacuum couches & chairs</li>
                           <li>Empty trash bins</li>
                        </ul>

                        <p>
                           <b>Office Kitchen</b>
                        </p>

                        <ul class="normal-list">
                           <li>Stove top and overhead fan</li>
                           <li>Clean microwave</li>
                           <li>Wipe large kitchen appliances</li>
                           <li>Run & fill dishwasher</li>
                           <li>Wipe down oven and door handle</li>
                           <li>Wipe down cabinets and handles</li>
                           <li>Empty and fill bins</li>
                        </ul>

                        <p>
                           <b>Office Bathroom(s)</b>
                        </p>
                        <ul class="normal-list">
                           <li>Scrub & clean toilets</li>
                           <li>Mop and tile grime removal</li>
                           <li>Scrub & clean showers</li>
                           <li>Scrub & clean sinks</li>
                           <li>Clean soap dish</li>
                           <li>Wipe down mirror</li>
                           <li>Clean shower head</li>
                        </ul>

                        <p>
                           <b>Wet Areas</b>
                        </p>
                        <ul class="normal-list">
                           <li>Dust cabinet doors</li>
                           <li>Clean countertops</li>
                           <li>Vacuum area rugs</li>
                           <li>Polish cabinet doors</li>
                           <li>Mop and tile grime removal</li>
                        </ul>


                        <p>
                           <b>Extra services (can be included for an additional price)</b>
                        </p>
                        <ul class="normal-list">
                           <li>Clean refrigerator</li>
                           <li>Oven cleaning</li>
                           <li>Wall washing</li>
                           <li>Cleaning of skirting boards</li>
                           <li>Blind cleaning</li>
                           <li>Cleaning of cabinet interiors</li>
                        </ul>
                     </div>

                     <p>
                        <iframe
                           src="https://player.vimeo.com/video/707335341?h=c656db9f23&title=0&byline=0&portrait=0"
                           width="100%"
                           height="450"
                           frameborder="0"
                           allow="autoplay; fullscreen; picture-in-picture"
                           allowfullscreen></iframe>
                     </p>
                  </div>
               </div>

               <div class="column is-4">
                  <Aside />
               </div>
            </div>
         </div>
      </div>
   </section>
</Layout>

<style>
   .two-cols {
      columns: 2;
      margin-bottom: 2rem;
   }
</style>
